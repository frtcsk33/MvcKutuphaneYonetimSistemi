@model MvcKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>PersonelGetir</h2>

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px;"></div>
    <div class="form-group">

        <div style="margin-bottom:15px;">

            <label>PERSONEL ID</label>
            @Html.TextBoxFor(p => p.ID, new { @class = "form-control" })
            
        </div>

        <div style="margin-bottom:15px;">

            <label>PERSONEL ADI</label>
            @Html.TextBoxFor(p => p.PERSONEL, new {@class="form-control" })
        </div>


        <button class="btn btn-warning">Personel Bilgilerini Güncelle</button>

    </div>



}